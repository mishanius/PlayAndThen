<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Access Consent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="24dp" />

        <!-- Explanation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PlayAndThen uses Android's Accessibility Service to monitor YouTube Kids. Please review how your data is accessed and used:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Section: What We Access -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ What We Access"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Video titles from YouTube Kids (to detect language)\nâ€¢ Playback state (to know when videos start)\nâ€¢ Screen elements (to detect video player)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Section: How We Use It -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ How We Use It"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Detect video language (Hebrew, English, Russian)\nâ€¢ Skip videos in non-allowed languages\nâ€¢ Show educational games before videos\nâ€¢ Track watch time to determine game frequency"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Section: What We DON'T Do -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ What We DON'T Do"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ We do NOT collect or store personal data\nâ€¢ We do NOT send data to any server\nâ€¢ We do NOT share data with third parties\nâ€¢ All processing happens locally on your device"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/consentCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I understand and consent to the data access described above"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Accept Button -->
        <Button
            android:id="@+id/acceptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept and Continue"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <!-- Decline Button -->
        <Button
            android:id="@+id/declineButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:textSize="16sp"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
