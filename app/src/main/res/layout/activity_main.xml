<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF8E1"
    android:gravity="center">

    <!-- App Icon/Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/balloon"
        android:layout_marginBottom="24dp"
        android:contentDescription="PlayAndThen Logo" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlayAndThen"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Educational counting games for children watching YouTube Kids"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Status Message -->
    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting up PlayAndThen..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:visibility="visible" />

    <!-- Request Permission Button -->
    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Overlay Permission"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF6B6B"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:visibility="gone" />

    <!-- Test Overlay Button -->
    <Button
        android:id="@+id/testOverlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ® Test Game Overlay"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:visibility="gone" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“± Instructions:\n\n1. Grant overlay permission when prompted\n2. Enable PlayAndThen accessibility service in Settings\n3. Open YouTube Kids - the counting game will appear before each new video\n4. Your child must solve the game to continue watching"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>
